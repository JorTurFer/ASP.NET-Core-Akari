@model Web.Areas.Pacientes.Data.Referencia

@{
    ViewData["Title"] = "Nueva referencia";
}

<h2>Crear referencia</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReferencia" />
            <div class="form-group">
                <label asp-for="Identificador" class="control-label"></label>
                <input asp-for="Identificador" class="form-control" />
                <span asp-validation-for="Identificador" class="text-danger"></span>
            </div>
            @{
                var cols = 45;
                var rows = 5;
            }
            <div class="form-group">
                @Html.LabelFor(model => model.Concepto)
                @Html.TextAreaFor(model => model.Concepto, new { cols = cols, rows = rows })
                @Html.ValidationMessageFor(model => model.Concepto)
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <hr/>
            <div class="col-md-3">
                <a asp-action="Index" class="btn btn-default">Volver atras</a>
            </div>
            <div class="form-group col-md-2 col-md-offset-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>