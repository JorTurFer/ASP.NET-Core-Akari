@model FacturacionViewModel

<table id="tableFacturacion" class="table" cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <th style="width: 20">Año</th>
            <th style="width: 50">Mes</th>
            <th style="width: 30%">€</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FacturacionData)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.Mes</td>
                <td>@item.Total €</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>---</td>
            <td>Total</td>
            <td>@Model.Total €</td>
        </tr>
    </tfoot>
</table>
