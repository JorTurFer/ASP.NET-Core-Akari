@model Web.Areas.Facturas.Entities.ViewModels.GridFacturasViewModel
@{
    Layout = null;
}

@if (!Model.FacturasHeaders.Any())
{
    <div class="alert alert-warning">No se han encontrado facturas.</div>
}
else
{
    <input id="pageSize" type="hidden" value="@Model.PageSize" />
    <table class="table table-striped table-hover site-user-list">
        <thead>
            <tr>
                <th>
                    <a id="codigo">
                        Codigo
                    </a>
                </th>
                <th>
                    <a id="paciente">
                        Paciente
                    </a>
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var factura in Model.FacturasHeaders)
            {
            <tr>                
                <td>@factura.Codigo</td>
                <td>@factura.Paciente.Nombre</td>
                <td> </td>
                <td> </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@factura.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a class="btn btn-sm btn-danger" data-targetid="@factura.Id" data-modal="#confirm-remove-factura">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="modal fade site-modal-remove" id="confirm-remove-factura" data-url="@Url.Action("Delete")">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Borrar factura</h4>
                </div>
                <div class="modal-body">
                    <p>La factura será borrada permanentemente.</p>
                    <p>¿Desea continuar?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">Eliminar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



    @if (Model.TotalReferencias > Model.FacturasHeaders.Count())
    {
        var lastPage = (int)Math.Ceiling((decimal)Model.TotalReferencias / Model.PageSize);

        <div class="row">
            <div class="col-md-offset-3">
                <button id="first" class="btn btn-primary"><span class="glyphicon glyphicon-step-backward"></span></button>
                <button id="prev" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-left"></span></button>
                <span style="margin: 10px">Página @Model.Page de @lastPage</span>
                <button id="next" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-right"></span></button>
                <button id="last" class="btn btn-primary"><span class="glyphicon glyphicon-step-forward"></span></button>
            </div>
        </div>
    }
}
<script type="text/javascript">
    activateModalActions();
    @{
        var last = (int)Math.Ceiling((decimal)Model.TotalReferencias / Model.PageSize);
    }
    $('#first').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(), '@Model.Sort', '@Model.Ascending', '1', $("#pageSize").val()),$("#listayears").val()});
    $('#prev').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(),'@Model.Sort','@Model.Ascending', '@Math.Max(1, Model.Page - 1)', $("#pageSize").val()),$("#listayears").val()});
    $('#next').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(),'@Model.Sort','@Model.Ascending', '@Math.Min(last, Model.Page + 1)', $("#pageSize").val()),$("#listayears").val()});
    $('#last').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(), '@Model.Sort', '@Model.Ascending', '@last', $("#pageSize").val()),$("#listayears").val() });
    $('#codigo').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(), 'codigo', '@Model.InvertAscending', '@Model.Page', $("#pageSize").val()),$("#listayears").val() });
    $('#paciente').click(function () { getFacturasGrid('@Url.Action("GetFacturasGrid", "Facturas")', $("#searchInput").val(), 'paciente', '@Model.InvertAscending', '@Model.Page', $("#pageSize").val()),$("#listayears").val() });
</script>
