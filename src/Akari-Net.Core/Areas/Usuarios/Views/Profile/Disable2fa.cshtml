@{
    ViewData["Title"] = "Desactivar autenticación en dos fases (2FA)";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Esta acción solo desactiva 2FA.</strong>
    </p>
    <p>
        Deshabilitando 2FA no cambias las claves usadas en las aplicaciones de autenticación.
        Si quieres cambiar la clave que usan deberias <a asp-action="ResetAuthenticatorWarning">resetear tus claves</a>
    </p>
</div>

<div>
    <form asp-action="Disable2fa" method="post" class="form-group">
        <button class="btn btn-danger" type="submit">Desactivar 2FA</button>
    </form>
</div>
